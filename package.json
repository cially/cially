{
  "name": "cially",
  "version": "2.0.0-beta.0",
  "description": "OSS Discord Analytics",
  "type": "module",
  "scripts": {
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "docker:bot": "docker --target cially-bot -t cially-bot .",
    "docker:web": "docker --target cially-web -t cially-web .",
    "up": "taze -r -I",
    "lefthook": "lefthook install",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@commitlint/cz-commitlint": "catalog:",
    "commitizen": "catalog:",
    "lefthook": "catalog:",
    "taze": "catalog:"
  },
  "postinstall": "lefthook install",
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "packageManager": "pnpm@10.12.1"
}
